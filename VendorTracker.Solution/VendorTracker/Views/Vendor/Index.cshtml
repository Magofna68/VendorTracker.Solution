@using VendorTracker.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added. <br><br> Add Vendors to view details.</h3>
}
<ul>
  @foreach (Vendor Vendor in Model)
  {
    <li><a href='/vendors/@Vendor.Id'>@Vendor.Name</a></li>
    //Targeting the Vendor obj --> pull vendor name from object
  }
</ul>
<a href='/vendors/new'>Add a new Vendor</a>